<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/xxx">

        <ImageView
            android:layout_width="@dimen/loot_back"
            android:layout_height="@dimen/loot_back"
            android:id="@+id/loot_back"
            android:src="@drawable/back_arrow"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeemed items :"
            android:id="@+id/loot_redeemed_item"
            android:textSize="@dimen/loot_redeemed_item"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/loot_back"
            android:layout_toEndOf="@+id/loot_back"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 items"
            android:id="@+id/loot_itemcount"
            android:textSize="@dimen/loot_itemcount"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/loot_redeemed_item"
            android:layout_toEndOf="@+id/loot_redeemed_item" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:src="@drawable/lootdivider"
            android:layout_below="@+id/loot_redeemed_item"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>



</LinearLayout>